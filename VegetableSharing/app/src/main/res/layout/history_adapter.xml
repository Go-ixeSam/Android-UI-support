<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_retangle_corner_five_radius"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginEnd="@dimen/margin2"
        android:layout_marginTop="@dimen/margin2"
        android:layout_marginStart="@dimen/margin2"
        android:textSize="13sp"
        android:id="@+id/tvDatePush"
        android:text="Dang ngay 20/1/2021"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="@dimen/margin2"
        android:text="dfdfdsf"
        android:id="@+id/tvName1"
        android:layout_marginTop="@dimen/margin2"
        app:layout_constraintTop_toBottomOf="@+id/tvDatePush"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginStart="@dimen/margin2"
        android:id="@+id/imvArrow"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="@+id/tvName1"
        app:layout_constraintTop_toTopOf="@id/tvName1"
        app:layout_constraintStart_toEndOf="@+id/tvName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="@dimen/margin2"
        android:text="ddd"
        app:layout_constraintBottom_toBottomOf="@+id/tvName1"
        app:layout_constraintTop_toTopOf="@+id/tvName1"
        app:layout_constraintStart_toEndOf="@+id/imvArrow"
        android:id="@+id/tvName2"
        app:layout_constraintTop_toBottomOf="@+id/tvDatePush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="@dimen/margin2"
        android:text="ddd"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tvNumberChange"
        app:layout_constraintTop_toBottomOf="@+id/tvName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="@dimen/margin2"
        android:text="ddd"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tvNumberHave"
        app:layout_constraintTop_toBottomOf="@+id/tvNumberChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>